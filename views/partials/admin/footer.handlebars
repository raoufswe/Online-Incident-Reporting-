var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: ["Number of incidents", "Number of Buildings", "Number of Users"],
        datasets: [{  
            label: '# of Votes',
            data: [{{postCount}}, {{categoryCount}}, {{userCount}}],
