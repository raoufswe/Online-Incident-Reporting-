<head>
  <style>
  img{
    
    width: 500px;
  }

  .wrapper {
  padding-top: 10px; 
  display: grid;
  grid-template-columns: 1fr;
  justify-items: center;

}


.box {
  box-shadow: 0px 7px 15px rgb(25,17,34,0.05);
  border-radius: 10px;
}

  </style>
</head> 
 


    <nav class="navbar  navbar-dark bg-dark fixed-top">
  <a class="navbar-brand" href="#">Incident Report</a>
  
  <div  id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" href="/admin">Dashboard</a>
      </li>
    </ul>
  </div>
</nav>

    <div class="wrapper">
     
    
        <!-- Title -->
          <h1> <strong>{{post.title}} </strong></h1>

          <!-- Author -->
          <p style="padding-bottom: 0px; padding-top: 0px;">
            by
            <a href="#">{{post.user.firstName}}</a>
          </p>


          <!-- Date/Time -->
          <p style="padding-top: -6px;border-bottom: 1px solid black">Posted on {{generateDate date "MMM Do YYYY"}}</p>

     
      
         
          <!-- Preview Image -->
          <img class="box" src="/uploads/{{post.file}}" alt="">

      <hr>

          <!-- Post Content -->
          

        <p><strong>ID:  </strong>{{post.id}}</p> 
        <p><strong>Incident status:  </strong>{{post.status}}</p>
        <p><strong>Direct cause:  </strong>{{post.DirectCause}}</p>
        <p><strong>Sub direct cause:  </strong>{{post.SubDirectCause}}</p>
        <p><strong>Incident rating:  </strong>{{post.IncidentRating}}</p>
        <p><strong>Incident type:  </strong>{{post.IncidentType}}</p>
        <p><strong>Assigend to:  </strong>{{post.AssignedTo}}</p>
        <p><strong>Additional Details:  </strong>{{post.body}}</p>
        <hr>
        

     
      
</div>




